                    <td class="text-center">{{ correction.valeurApres }}</td>
                    <td class="text-center">{{ correction.quantiteAjoutee }}</td>
                    <td>{{ correction.operateur }}</td>
                    <td>{{ correction.observations ?? '-' }}</td>
                </tr>
                {% endfor %}
