{% block javascripts %}
    {{ parent() }}
    <script>
        // Mise √† jour automatique des horloges
        function updateClocks() {
            const clocks = document.querySelectorAll('.clock');
            const now = new Date();
            const timeString = now.toLocaleTimeString('fr-FR', {
                hour: '2-digit',
                minute: '2-digit'
            });
            
            clocks.forEach(clock => {
                if (clock.textContent !== 'üïê') {
                    clock.textContent = timeString;
                }
            });
        }
        
        // Mettre √† jour les horloges toutes les minutes
        setInterval(updateClocks, 60000);
        updateClocks();
        
        // Animation des processus
        document.querySelectorAll('.process-item').forEach(item => {
            item.addEventListener('click', function() {
                this.style.transform = 'scale(1.05)';
                setTimeout(() => {
                    this.style.transform = '';
                }, 200);
            });
        });
        
        // Mise √† jour automatique du statut (simulation)
        function simulateStatusUpdate() {
            const statusElements = document.querySelectorAll('.status-indicator');
            statusElements.forEach(el => {
                if (Math.random() < 0.1) { // 10% de chance de changement
                    const classes = ['status-en-cours', 'status-termine', 'status-attente'];
                    const currentClass = Array.from(el.classList).find(c => c.startsWith('status-'));
                    el.classList.remove(currentClass);
                    const newClass = classes[Math.floor(Math.random() * classes.length)];
                    el.classList.add(newClass);
                }
            });
        }
        
        // Simulation de mise √† jour toutes les 30 secondes
        setInterval(simulateStatusUpdate, 30000);
    </script>
