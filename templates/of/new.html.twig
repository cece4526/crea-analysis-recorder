{% extends 'base.html.twig' %}

{% block title %}Nouvel Ordre de Fabrication{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8">
            <h1>Nouvel Ordre de Fabrication</h1>
            
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                <div class="mb-3">
                    {{ form_label(form.numero, 'Numéro OF', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.numero, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.numero) }}
                </div>
                
                <div class="mb-3">
                    {{ form_label(form.date, 'Date de création', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.date) }}
                </div>
                
                <div class="mb-3">
                    {{ form_label(form.produit, 'Produit', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.produit, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.produit) }}
                </div>
                
                <div class="mb-3">
                    {{ form_label(form.quantite, 'Quantité', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.quantite, {'attr': {'class': 'form-control', 'step': '0.01'}}) }}
                    {{ form_errors(form.quantite) }}
                </div>
                
                <div class="mb-3">
                    {{ form_label(form.statut, 'Statut', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.statut, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.statut) }}
                </div>
                
                {{ form_rest(form) }}
                
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                    <a href="{{ path('app_of_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
