{% extends 'base.html.twig' %}

{% block title %}Liste des Ordres de Fabrication{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Ordres de Fabrication</h1>
        <a href="{{ path('of_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvel OF
        </a>
    </div>
    
    <div class="card">
        <div class="card-body">
            {% if ofs is empty %}
                <p class="text-muted text-center py-4">
                    <i class="fas fa-inbox fa-3x d-block mb-3"></i>
                    Aucun ordre de fabrication enregistré.
                </p>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Numéro</th>
                                <th>Date</th>
                                <th>Produit</th>
                                <th>Quantité</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for of in ofs %}
                                <tr>
                                    <td>OF-{{ of.numero }}</td>
                                    <td>{{ of.date|date('d/m/Y') }}</td>
                                    <td>{{ of.produit }}</td>
                                    <td>{{ of.quantite|number_format(2, ',', ' ') }}</td>
                                    <td>
                                        <span class="badge bg-{% if of.statut == 'terminé' %}success{% elseif of.statut == 'en cours' %}warning{% else %}secondary{% endif %}">
                                            {{ of.statut|title }}
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="{{ path('of_show', {'id': of.id}) }}" class="btn btn-outline-primary" title="Voir">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('of_edit', {'id': of.id}) }}" class="btn btn-outline-secondary" title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
