<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRÉA Analysis Recorder - Accueil</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/build/app.css" rel="stylesheet">
    <link href="/build/home.css" rel="stylesheet">
</head>
<body>
    <!-- Section Hero -->
    <section class="hero-section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="brand-logo mb-4">
                        <i class="fas fa-flask me-3"></i>CRÉA Analysis Recorder
                    </div>
                    <h1 class="display-4 mb-4">Système de Suivi de Production</h1>
                    <p class="lead">Choisissez votre type de production pour accéder au dashboard correspondant</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Section Choix de Production -->
    <section class="py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-6 mb-4">
                    <div class="card production-card cereales-card" onclick="window.location.href='/cereales/simple-dashboard'">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center text-center position-relative">
                            <div class="production-icon">
                                <i class="fas fa-seedling"></i>
                            </div>
                            <h3 class="card-title mb-3">Production Céréales</h3>
                            <p class="card-text mb-4">
                                Suivi complet des ordres de fabrication céréales :<br>
                                • Cuves et décanteurs<br>
                                • Enzymes et corrections<br>
                                • Contrôles HACCP<br>
                                • Analyses qualité
                            </p>
                            <div class="card-overlay"></div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-5 col-md-6 mb-4">
                    <div class="card production-card soja-card" onclick="window.location.href='/soja/dashboard'">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center text-center position-relative">
                            <div class="production-icon">
                                <i class="fas fa-leaf"></i>
                            </div>
                            <h3 class="card-title mb-3">Production Soja</h3>
                            <p class="card-text mb-4">
                                Suivi complet des ordres de fabrication soja :<br>
                                • Analyses et échantillons<br>
                                • Okara et corrections<br>
                                • Processus spécifiques<br>
                                • Contrôles qualité
                            </p>
                            <div class="card-overlay"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section Statistiques -->
    {% if not db_error %}
    <section class="stats-section">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2 class="display-6">Statistiques Générales</h2>
                    <p class="text-muted">Aperçu de l'activité de production</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="stat-card">
                        <div class="stat-number">{{ stats.total_of }}</div>
                        <h5>Ordres de Fabrication</h5>
                        <p class="text-muted">Total des OF créés</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stat-card">
                        <div class="stat-number text-success">{{ stats.of_en_cours }}</div>
                        <h5>OF en Cours</h5>
                        <p class="text-muted">Actuellement en production</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stat-card">
                        <div class="stat-number text-info">{{ stats.total_productions }}</div>
                        <h5>Productions</h5>
                        <p class="text-muted">Sessions de production</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stat-card">
                        <div class="stat-number text-warning">{{ stats.total_haccp }}</div>
                        <h5>Contrôles HACCP</h5>
                        <p class="text-muted">Points de contrôle qualité</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% endif %}

    <!-- Footer -->
    <footer class="bg-footer text-light py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h6><i class="fas fa-flask me-2"></i>CRÉA Analysis Recorder</h6>
                    <p class="mb-0">Système de gestion et suivi de production alimentaire</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">
                        <i class="fas fa-clock me-2"></i>Dernière mise à jour : {{ "now"|date("d/m/Y H:i") }}
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Effet de hover pour les cartes
        document.querySelectorAll('.production-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-10px) scale(1.02)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1)';
            });
        });

        // Animation au chargement
        window.addEventListener('load', function() {
            document.querySelectorAll('.production-card').forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(50px)';
                    card.style.transition = 'all 0.6s ease';
                    
                    setTimeout(() => {
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, 100);
                }, index * 200);
            });
        });
    </script>
    <script src="/build/runtime.js"></script>
    <script src="/build/app.js"></script>
</body>
</html>
